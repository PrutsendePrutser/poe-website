<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/template.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Login page", "Index", "Dashboard", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
					<li class="active"><a href="#">Dashboard<span class="sr-only">(current)</span></a></li>
					<li><a href="http://www.pathofexile.com" target="_blank">Official PoE website</a></li>
					<li class="dropdown">
					  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Personal info<span class="caret"></span></a>
					  <ul class="dropdown-menu">
						<li><a href="#">Account settings</a></li>
						<li><a href="#">Character list</a></li>
						<li><a href="#">Saved builds</a></li>
					  </ul>
					</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()

	

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PrutsendePrutser applications</p>
        </footer>
    </div>

	

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
	<script src="~/Scripts/script.js"></script>

	<div class="modal fade" id="modalPopUp" tabindex="-1" role="dialog" aria-hidden="true" style="z-index: 1500;">
        <div class="modal-dialog  modal-lg modal-huge">
            <div class="modal-content" id="modalPopUpContent">
                <div class="modal-body">
                    <div id="ModalContent"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>